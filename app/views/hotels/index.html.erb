<h1>Hoteles Sede</h1>
<div id ="map" style="margin-left: auto; margin-right: auto; padding: 10px;">  
  <% @hotels.each do |hotel| %>
    <h2 style="text-align: center"><%= link_to hotel.name, hotel%></h2>
    <%= link_to image_tag(hotel.avatar.url, :size => "845x800"), hotel %>
    <br /><br />
  <% end %>
</div>
<br />
<% if logged_in? %>
  <div id="alllinks">
    <%= link_to 'Agregar Hotel', new_hotel_path %>
  </div>
<% end %>