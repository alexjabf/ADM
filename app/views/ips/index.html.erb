<h1>Listing Ip's</h1><br />

<table>
  <tr style="background-color: #000; color: white;">
    <th>Id</th>
    <th>Ip</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Created at</th>
  </tr>

  <% @ips.each do |ip| %>
  <!--%@flag = request.location.country_flag%!-->
    <tr id="table">
      <td style="color: white; padding:10px;"><%=ip.id%></td>
      <td style="padding:10px;"><%=link_to  ip.ip , ip%></td>
      <td style="padding:10px;"><%= ip.address %></td>
      <td style="padding:10px;"><%= ip.city %></td>
      <td style="padding:10px;"><%= ip.state %></td>
      <td style="padding:10px;"><%= ip.country %> <%=image_tag("/assets/flags/png/"+ ip.country_code.downcase + ".png")%></td>
      <td style="padding:10px;"><%= ip.created_at %></td>
    </tr>

  <% end %>
</table>
<br />

